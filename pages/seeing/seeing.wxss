/* pages/ability/ability.wxss */
.container {
    padding: 24rpx;
    background-color: #f5f5f5;
  }
  
  .card {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  
  /* 用户信息区样式 */
  .user-info {
    display: flex;
    align-items: flex-start;
  }
  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  .user-right {
    display: flex;
    flex-direction: column;
    flex: 1;
  }
  .user-basic {
    margin-bottom: 12rpx;
  }
  .user-name {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
    display: block;
  }
  .user-tags {
    display: flex;
    gap: 12rpx;
    margin-bottom: 16rpx;
  }
  .tag {
    background-color: #FEFBEA;
    padding: 4rpx 12rpx;
    border-radius: 16rpx;
    font-size: 24rpx;
    color: #333;
  }
  .divider-line {
    width: 90%;
    height: 2rpx;
    background-color: #999;
    margin: 10rpx 0;
  }
  .job-expectation {
    text-align: left; 
    color: #51C5A4;
  }
  .job-expectation .title {
    font-weight: bold;
    margin-bottom: 8rpx;
    font-size: 28rpx;
  }
  .job-expectation .content1, .job-expectation .content2 {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 4rpx;
    display: block;
    text-align: left;
  }
  
  .section-title {
    font-weight: bold;
    font-size: 30rpx;
    margin-bottom: 16rpx;
    color: #51C5A4;
  }
  
  .placeholder {
    height: 300rpx;
    background-color: #F3FFED;
    border-radius: 12rpx;
    text-align: center;
    line-height: 300rpx;
    color: #aaa;
    font-size: 26rpx;
  }
  
  .ability-title {
    font-weight: bold;
    font-size: 28rpx;
    margin-bottom: 12rpx;
    display: flex;
    align-items: center;
    gap: 8rpx;
  }
  
  /* 图片图标样式 */
  .ability-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 12rpx;
    border-radius: 8rpx;
    background-color: white; /* 加载时的背景色 */
  }
  
  .progress-label {
    display: flex;
    justify-content: space-between;
    color: #999;
    font-size: 24rpx;
    margin-bottom: 8rpx;
  }
  
  .progress-bar {
    width: 100%;
    height: 12rpx;
    background-color: #eee;
    border-radius: 8rpx;
    margin-bottom: 12rpx;
  }
  
  .progress {
    height: 100%;
    background-color: #51C5A4;
    border-radius: 8rpx;
    transition: width 0.5s ease; /* 进度条过渡动画 */
  }
  
  /* 改进建议模块样式 */
  .suggestion-module {
    background-color: #F3FFED;
    border-radius: 8rpx;
    padding: 16rpx;
    margin-top: 12rpx;
  }
  .suggest-title {
    font-weight: bold;
    font-size: 26rpx;
    margin-bottom: 8rpx;
    display: block;
  }
  .suggest-content {
    font-size: 24rpx;
    color: #666;
    line-height: 32rpx;
  }
  
  .suggest-list {
    display: flex;
    align-items: flex-start;
    margin-bottom: 12rpx;
  }
  
  .bullet {
    margin-right: 12rpx;
    color: #999;
  }
  
  .suggest-text {
    font-weight: bold;
    font-size: 26rpx;
    color: #333;
    line-height: 40rpx;
  }