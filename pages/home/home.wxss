.page-container {
  position: relative;
}

.van-nav-bar {
  display: flex;
  text-align: center;
  position: absolute;
  width: 100%;
  height: 180rpx;
  justify-content: space-between;
  background: linear-gradient(45deg, #FFF9C4, #D0F9F5, #FFF9C4) !important;
  z-index: 1; 
}

.van-nav-bar__content {
margin: 0 auto;
width: 100%;
}

.van-nav-bar__title{
  color: #000;
  text-align: center;
  width: 100%;
}

.container {
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #fff;
    box-sizing: border-box;
    padding-top: 200rpx;
    padding-bottom: 160rpx;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.main-card {
    height: 600px;
    width: 350px;
    background: #f7f7f7;
    border-radius: 40rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03);
    overflow: visible;
    margin-top: 60rpx;
}

/* 移除原来的 main-card-bg 类，改用 image 标签 */
.main-card-bg {
    display: none;
}

/* 新增：使用 image 标签的样式 */
.main-card-bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    /* opacity: 0.2; 保持原有的透明度 */
    border-radius: 40rpx;
}

.card-content {
    position: relative;
    z-index: 2;
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-top: 20rpx;
    padding: 40rpx;
}

.main-title {
    font-size: 44rpx;
    font-weight: bold;
    margin-bottom: 32rpx;
    line-height: 1.2;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-bottom: 200rpx;
    z-index: 2;
}
.bold {
    font-weight: bold;
    font-size: 90rpx;
    margin-bottom: 40rpx;
    color: white;
}
.line-container {
    width: 300rpx;
    height: 70rpx;
    margin-top: -70rpx;
    margin-bottom: 0rpx;
    line-height: 70rpx;
    overflow: hidden;
    z-index: 1;
    opacity: 0.8;
}

.line-image {
    width: 100%;
    height: 100%;
    display: block;
    z-index: 1;
}
.arrow-btn {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100%;
    background: #E6F3FF;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx auto;
    transform: translateY(50rpx);
}
.arrow {
    font-size: 100rpx;
    color: #4D8CE6;
}

.desc {
    font-size: 42rpx;
    color: white;
    margin: 0rpx;
    line-height: 1.7;
    word-break: break-all;
}

.bottom-login {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
    z-index: 10;
}

.login-tip {
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 20rpx;
}

.login-btn {
    background-color: #1aad19;
    color: #fff;
    font-size: 36rpx;
    padding: 30rpx 0;
    border-radius: 50rpx;
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 28rpx;
}

/* 新增：禁用按钮样式 */
.disabled-btn {
    opacity: 0.5;
    cursor: not-allowed;
}

.title-image {
    width: 280rpx;  /* 根据你设计的图尺寸调整 */
    margin-bottom: 40rpx;
}

.page-container {
    /* 线性渐变，方向这里设为从上到下（to bottom），可按需改，比如 to right 是从左到右等 */
    background: linear-gradient(to bottom, 
      #FAFFE0 14%,   /* 调整下顺序，让占比小的先出现，按数值从小到大排列更合理，你可根据需求微调 */
      #C8FFDA 50%,
      #C8F6FF 55%
    );
    /* 让背景覆盖整个页面 */
    width: 100vw;
    height: 100vh;
  }