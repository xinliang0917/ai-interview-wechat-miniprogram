.container {
    display: flex;
    flex-direction: column;
    padding: 16rpx;
    min-height: 100vh;
    background-color: #f9f9f9;
  }
  
  .top-bar {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 12rpx;
  }
  .left-space {
    flex: 1;
  }
  .countdown {
    font-size: 28rpx;
    display: flex;
    align-items: center;
  }
  
  /* 新增样式：倒计时标签文字颜色为黑色 */
  .countdown-label {
    color: gray;
  }
  
  /* 新增样式：倒计时时间部分保持绿色 */
  .countdown-time {
    color: #51C5A4;
  }
  
  .progress-wrap {
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
  }
  .progress-bar {
    width: 100%;
    height: 12rpx;
    background-color: #e5e5e5;
    border-radius: 6rpx;
    overflow: hidden;
    margin-bottom: 8rpx;
  }
  .progress-inner {
    height: 100%;
    background-color: #51C5A4;
    transition: width 0.3s ease;
  }
  .question-count {
    font-size: 28rpx;
    color: white;
    background-color: #51C5A4;
    padding: 6rpx 16rpx;
    border-radius: 16rpx;
    width: fit-content;
  }
  
  .question-card {
    border: 2rpx solid #ddd;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    width: calc(100% - 32rpx); 
    background-color: #fff;
  }
  .question-text {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
  }
  
  .upload-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20rpx;
  }
  .upload-btn {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: gray;
    padding: 16rpx 32rpx;
    border-radius: 12rpx;
    background-color: #f5f5f5;
    border: 2rpx dashed #51C5A4;
    width: 70%;
    justify-content: center;
  }
  .upload-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
  }
  .file-info {
    margin-top: 10rpx;
    color: #666;
    font-size: 24rpx;
  }
  
  .btn-group {
    display: flex;
    justify-content: space-around;
    margin-top: auto; 
    margin-bottom: 40rpx;
  }
  .prev-btn, .next-btn {
    width: 200rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 20rpx; 
    font-size: 32rpx;
  }
  .prev-btn {
    background-color: #e5e5e5;
    color: #666;
  }
  .next-btn {
    background-color: #51C5A4;
    color: #fff;
  }
  button:disabled {
    opacity: 0.6;
  }    