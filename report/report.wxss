/* 全局容器 */
.container {
    display: flex;
    flex-direction: column;
    padding: 16rpx;
    min-height: 100vh;
    background-color: #f9f9f9;
  }
  
  /* 顶部导航 */
  .top-bar {
    display: flex;
    justify-content: flex-end; /* 让倒计时居右 */
    align-items: center;
    margin-bottom: 12rpx;
  }
  .left-space {
    flex: 1; /* 占据左边空间，使倒计时居右 */
  }
  .countdown {
    font-size: 28rpx;
    color: #666;
  }
  
  /* 进度条 + 题目数 */
  .progress-wrap {
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
  }
  .progress-bar {
    width: 100%;
    height: 12rpx;
    background-color: #e5e5e5;
    border-radius: 6rpx;
    overflow: hidden;
    margin-bottom: 8rpx;
  }
  .progress-inner {
    height: 100%;
    background-color: #1aad19;
    transition: width 0.3s ease;
  }
  /* 加深题目数背景颜色 */
  .question-count {
    font-size: 28rpx;
    color: #333;
    background-color: #d5d5d5; /* 比之前更深的背景色 */
    padding: 6rpx 16rpx;
    border-radius: 16rpx;
    width: fit-content;
  }
  
  /* 问题模块（边框拉长） */
  .question-card {
    border: 2rpx solid #ddd;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    width: calc(100% - 32rpx); 
    background-color: #fff;
  }
  .question-text {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
  }
  
  /* 上传模块（图标放入按钮内） */
  .upload-wrap {
    display: flex;
    justify-content: center;
    margin-bottom: 20rpx; /* 减小与底部距离，让按钮位置上移 */
  }
  .upload-btn {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #333;
    padding: 16rpx 32rpx;
    border-radius: 12rpx;
    background-color: #f5f5f5;
    border: 2rpx dashed #999; /* 保持虚线边框 */
  }
  .upload-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
  }
  
  /* 底部按钮 - 调整距离底部位置 */
  .btn-group {
    display: flex;
    justify-content: space-around;
    margin-top: auto; 
    margin-bottom: 40rpx; /* 增大底部外边距，让按钮距离底部更远，可根据需求调整 */
  }
  .prev-btn, .next-btn {
    width: 200rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 20rpx; 
    font-size: 32rpx;
  }
  .prev-btn {
    background-color: #e5e5e5;
    color: #666;
  }
  .next-btn {
    background-color: #999;
    color: #fff;
  }
  /* 禁用状态 */
  button:disabled {
    opacity: 0.6;
  }